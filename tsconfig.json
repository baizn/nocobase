{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "noUnusedLocals": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "declaration": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@nocobase/utils/client": ["packages/core/utils/src/client"],
      "@nocobase/*": ["packages/core/*/src"],
      "@tugraph/plugin-*": ["packages/plugins/*/src"],
      "@tugraph/openpiece-server-app": ["packages/app/server/src"],
      "@tugraph/openpiece-client-app": ["packages/app/client/src"],
      "@tugraph/preset-*": ["packages/presets/src"],
      "@tugraph/openpiece-*": ["packages/core/*/src"],
      "@tugraph/*": ["packages/core/*/src"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
